  color: #f6a127;
  margin-top:20rpx; 
}
.content-img{
  width: 100%;
  height: 800rpx;
}

.img{
  width: 150rpx;
  height: 150rpx;
}
.hh{
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-top:30rpx; 
}
.hh view{
  border-top: 1rpx solid #e8e8e8;
  padding: 30rpx 0;
